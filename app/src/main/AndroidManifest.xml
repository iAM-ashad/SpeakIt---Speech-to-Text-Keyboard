<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Runtime mic permission -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name=".SpeakItApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SpeakIt">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.SpeakIt">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- IME service MUST be inside <application> -->
        <service
            android:name=".ime.SpeakItKeyboardService"
            android:exported="true"
            android:label="SpeakIt Keyboard"
            android:permission="android.permission.BIND_INPUT_METHOD">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>
            <meta-data
                android:name="android.view.im"
                android:resource="@xml/ime_method" />
        </service>

    </application>
</manifest>
